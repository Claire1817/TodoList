<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.claire.todolist">

    <application
        android:allowBackup="true"
        android:banner="@color/colorPrimary"
        android:icon="@drawable/logo_todolist"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayAddAction"
            android:label="@string/title_activity_display_add_action"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ModifActivity"></activity>
    </application>

</manifest>